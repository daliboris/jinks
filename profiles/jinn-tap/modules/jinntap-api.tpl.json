{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "[[ head(($pkg?title, $label)) ]] â€“ JinnTap Editor API",
        "description": "This is the place to add your own path endpoints"
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url": "/exist/apps/[[$pkg?abbrev]]"
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "teipublisher.com.login",
                "in": "cookie"
            }
        }
    },
    "tags": [],
    "paths": {
        "/api/jinntap/{id}": {
            "get": {
                "summary": "Get the JinnTap document",
                "description": "Get the JinnTap document",
                "operationId": "jt:load",
                "parameters": [
                    {
						"name": "id",
						"in": "path",
						"description": "document to import",
						"required": true,						
						"schema":{
							"type": "string"
						}
					}
                ],
                "responses": {
                    "200": {
						"description": "HTML of the page",
						"content": {
							"text/html": {
								"schema": {
									"type": "string"
								}
							}
						}
					}
                }
            },
            "put": {
                "summary": "Update the document",
                "description": "Update the document",
                "operationId": "jt:save",
                "requestBody": {
					"content": {
						"application/xml": {
							"schema": {
								"type": "string"
							}
						}
					}
				},
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "path to the document",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "title",
                        "in": "query",
                        "description": "title of the document"
                    }
                ],
                "responses": {
                    "200": {
						"description": "Saved",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								}
							}
						}
					}
                }
            }
        }
    },
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}