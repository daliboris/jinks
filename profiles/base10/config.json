{
    "$schema": "../../schema/jinks.json",
    "type": "base",
    "id": "https://e-editiones.org/app/tei-publisher/base",
    "version": "1.0.0",
    "label": "TEI Publisher Base",
    "description": "Base profile for a TEI Publisher 10 application. Not usable on its own.",
    "order": 0,
    "pkg": {
        "abbrev": "tei-publisher-base",
        "version": "1.0.0",
        "website": "http://tei-publisher.com",
        "user": {
            "name": "tei",
            "group": "tei",
            "password": "simple"
        },
        "permissions": "rw-r--r--"
    },
    "templating": {
        "modules": {
            "http://teipublisher.com/ns/templates/page": {
                "prefix": "page",
                "at": "modules/templates/page.xqm"
            },
            "http://teipublisher.com/ns/templates/browse": {
                "prefix": "browse",
                "at": "modules/templates/browse.xqm"
            }
        }
    },
    "script": {
        "webcomponents": "2.24.5",
        "extra-components": [],
        "cdn": "https://cdn.jsdelivr.net/npm/@teipublisher/pb-components",
        "custom": []
    },
    "styles": [
        "https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css",
        "https://cdn.jsdelivr.net/npm/theme-toggles@4.10.1/css/classic.min.css",
        "resources/css/theme.css"
    ],
    "defaults": {
        "data": "data",
        "landing": "browse.html",
        "view": "div",
        "search": "div",
        "odd": "teipublisher.odd",
        "odd-root": "resources/odd",
        "template": "basic.html",
        "media": ["web", "print", "fo", "latex", "epub"],
        "pagination": {
            "depth": 10,
            "fill": 5
        }
    },
    "theme": {
        "logo": {
            "light": "../images/tei-publisher-logo-contrast-color.svg",
            "dark": "../images/tei-publisher-logo-contrast-color.svg",
            "splash": {
                "light": "../images/tei-publisher-logo-color.svg",
                "dark": "../images/tei-publisher-logo-contrast-color.svg"
            },
            "width": "140px",
            "height": "60px"
        },
        "fonts": {
            "base": "'Roboto', 'Noto', sans-serif",
            "content": "Junicode, Georgia, 'Times New Roman', serif",
            "heading": "Oswald, Verdana, Helvetica, sans-serif"
        },
        "colors": {
            "menubar": {
                "background": "#35424b",
                "color": "var(--pb-color-inverse)"
            },
            "toolbar": {
                "background": "#d1dae0",
                "color": "var(--pb-color-primary)"
            }
        }
    },
    "features": {
        "toolbar": true,
        "menubar": true,
        "toc": false,
        "hero": false,
        "upload": true
    },
    "odds": [
        "teipublisher.odd", 
        "docx.odd"
    ],
    "ignore": [
        "repo.xml"
    ],
    "skip": [],
    "menu": {
        "items": [
            {
                "id": "Start",
                "url": "index.html"
            }
        ],
        "delete": true,
        "login": true,
        "search": true,
        "dark-mode": true,
		"language": true,
		"download": true
    },
    "toolbar": {
        "zoom": true,
        "navigation": true
    },
    "address-by-id": false,
    "actions": [
        {
            "name": "reindex",
            "description": "Reindex data"
        },
        {
            "name": "fix-odds",
            "description": "Fix ODDs"
        }
    ]
}
