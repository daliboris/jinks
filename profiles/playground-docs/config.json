{
    "$schema": "../../schema/jinks.json",
    "type": "feature",
    "id": "https://e-editiones.org/app/tei-publisher/tei-publisher-app",
    "label": "Documentation + Playground",
    "description": "TEI Publisher documentation and playground",
    "version": "1.0.0",
    "order": 101,
    "defaults": {
        "data-default": ""
    },
    "depends": [
        "base10",
        "docbook",
        "monograph",
        "parallel",
        "registers",
        "jats",
        "demo-data"
    ],
    "pkg": {
        "abbrev": "tei-publisher"
    },
    "collection-config": {
        "doc": {
            "odd": "docbook.odd",
            "template": "documentation.html"
        },
        "letters": {
            "odd": "serafin.odd",
            "view": "single",
            "template": "parallel.html"
        },
        "monograph": {
            "odd": "dta.odd",
            "template": "monograph.html"
        },
        "jats": {
            "odd": "jats.odd",
            "template": "jats.html"
        }
    },
    "urls": {
        "template": "documentation/:id?",
        "ignore": "odd,view,path"
    },
    "templating": {
        "use": [
            "templates/playground-blocks.html"
        ]
    },
    "generator": {
        "templates": {
            "config-odd-available": "xmldb:get-child-resources($config:odd-root)[ends-with(., '.odd')][. != 'teipublisher_odds.odd']"
        }
    },
    "styles": [
        "resources/css/playground-docs-theme.css"
    ]
}