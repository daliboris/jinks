{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "jinks API"
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url": "/exist/apps/jinks"
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "teipublisher.com.login",
                "in": "cookie"
            }
        }
    },
    "paths": {
        "/{page}": {
            "get": {
                "description": "Load HTML page via templating",
                "operationId": "api:page",
                "parameters": [
                    {
                        "name": "page",
                        "in": "path",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The expanded HTML content",
                        "content": {
                            "text/html": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "text/css": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/configurations": {
            "get": {
                "operationId": "api:configurations",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/expand": {
            "post": {
                "description": "Retrieve the expanded configuration",
                "operationId": "api:expand-config",
                "requestBody": {
                    "required": true,
					"content": {
                        "application/json": {
							"schema": {
								"type": "object"
							}
						}
					}
                },
                "responses": {
                    "200": {
                        "description": "Expanded configuration",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/generator": {
            "post": {
                "description": "Update a profile or generate a new one. For a new app, please call the '/api/generator/{profile}/deploy' endpoint afterwards to deploy it on the db",
                "operationId": "api:generator",
                "parameters": [
                    {
                        "name": "overwrite",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "default",
                                "update",
                                "all"
                            ],
                            "default": "default"
                        },
                        "required": true,
                        "description": "The policy to use for overwriting existing files. The default is to not overwrite."
                    },
                    {
                        "name": "dry",
                        "in": "query",
                        "schema": {
                            "type": "boolean",
                            "default": "false"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
					"content": {
                        "application/json": {
							"schema": {
								"type": "object"
							}
						}
					}
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/templates": {
            "post": {
                "operationId": "api:expand-template",
                "description": "Expand the provided template",
                "parameters": [],
                "requestBody": {
					"required": true,
					"content": {
                        "application/json": {
							"schema": {
								"type": "string"
							}
						}
					}
				},
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error in template evaluation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/source/{path}": {
			"get": {
				"description": "Get the source of a file in the application",
				"x-constraints": {
					"groups": ["tei"]
				},
				"operationId": "api:source",
				"parameters": [
					{
						"name": "path",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK"
					}
				}
			}
		},
        "/api/login": {
			"post": {
				"summary": "Login the user",
				"description": "Login the given user",
				"tags": ["user"],
				"operationId": "auth:login",
				"requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "nullable": true,
                                "properties": {
                                    "user": {
                                        "description": "Name of the user",
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                }
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "type": "object",
                                "nullable": true,
                                "properties": {
                                    "user": {
                                        "description": "Name of the user",
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                }
                            }
                        }
                    }
                },
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"user": {
											"type": "string"
										},
										"groups": {
											"type": "array",
											"items": {
												"type": "string"
											}
										},
										"dba": {
											"type": "boolean"
										},
										"domain": {
											"type": "string"
										}
									}
								}
							}
						}
					},
					"401": {
						"description": "Wrong user or password"
					}
				}
			}
		}
    },
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}